@import 'jeet'

normalize-css()
base()

edit()

html
  background-color darkBlue
  background-position 50% 50%
  background-attachment fixed
  background-repeat no-repeat
  background-size contain
  background-image radial-gradient(circle farthest-corner at 50% 0%, rgba(#307455, 0.78) 0%, rgba(#0F1855, 0.97) 80%)

body
  color white
  font-family 'Roboto', sans-serif

.right
  text-align right

.center
  text-align center

.pad-5
  padding 5px

.mb-20
  margin-bottom 20px

.gs
  center(960px, 20px)
  cf()

.half
  col(1/2)
  +below(768px)
    stack()
    margin-bottom 20px

.third
  col(1/3)
  +below(768px)
    stack()
    margin-bottom 20px

.lista
  list-style-type none
  margin 0
  padding 0
  margin-bottom 20px
  min-height 280px

.lista__item
  margin-bottom 10px

.btns
  +below(768px)
    display none

.btn
  padding 5px
  border-radius 5px
  color white
  background-color rgba(blue, 0.5)
  border 0
  vertical-align middle
  outline none
  cursor pointer
  text-decoration none
  &::-moz-focus-inner
    border 0
  &:hover
    background-color rgba(blue, 0.7)
  &:focus:not(:active)
    background-color rgba(blue, 0.9)
  &:active
    background-color rgba(blue, 1)

// Flex Stuff
.flex,
.flex--row
  display flex
  flex-wrap nowrap
  justify-content flex-start
  align-items stretch

.flex--between
  justify-content space-between

.flex--center
  align-items center

.flex--col
  flex-direction column

.flex__child
  flex 1
  align-self auto

.flex__child--two
  flex 2

.flex__child--auto
  flex 0 0 auto

.pad-5
  padding 5px

track()
  width 100%
  height 12.8px
  cursor pointer
  animate 0.2s
  box-shadow none
  background rgba(blue, 0.5)
  border-radius 0
  border 0

thumb()
  box-shadow none
  border 0
  height 20px
  width 20px
  border-radius 0
  background rgba(blue, 1)
  cursor pointer

input[type=range]
  -webkit-appearance none
  margin 10px 0
  width 100%

input[type=range]:focus
  outline none
  &::-webkit-slider-runnable-track
    background rgba(blue, 0.5)

input[type=range]::-webkit-slider-runnable-track
  track()

input[type=range]::-webkit-slider-thumb
  thumb()
  margin-top -3.6px
  -webkit-appearance none

input[type=range]::-moz-range-track
  track()

input[type=range]::-moz-range-thumb
  thumb()

// Modal
duration = 0.45s

.modalLayout
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  margin auto
  width 100%
  height 100%
  overflow hidden
  background-color rgba(red, 0.8)
  color white
  backface-visibility hidden
  will-change transform, visibility

  visibility hidden
  transform translateY(-100%)
  transition transform duration, visibility 0s duration

  display flex
  justify-content center
  align-items center

  &:focus
    outline none

.modalLayout--open
  visibility visible
  transform translate(0%)
  transition: transform duration
